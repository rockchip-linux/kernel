&dp0 {
	split-mode;
	force-hpd;
	status = "okay";
};

&dp0_in_vp0 {
	status = "okay";
};

&dp0_out {
	link-frequencies = /bits/ 64 <2700000000>;
	remote-endpoint = <&i2c3_max96745_in>;
};

&usbdp_phy0 {
	rockchip,dp-lane-mux = <0 1 2 3>;
	status = "okay";
};

&usbdp_phy0_dp {
	status = "okay";
};

&route_dp0 {
	connect = <&vp0_out_dp0>;
