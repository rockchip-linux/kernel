config VIDEO_REVERSE_IMAGE
	bool "Rockchip Fast Reverse Image driver"
	depends on ARCH_ROCKCHIP && ROCKCHIP_DRM_DIRECT_SHOW
	depends on VIDEO_ROCKCHIP_CIF && PHY_ROCKCHIP_CSI2_DPHY
	help
	  fast reverse Image module.

