    hwcnt/mali_kbase_hwcnt.o \
    hwcnt/mali_kbase_hwcnt_gpu.o \
    hwcnt/mali_kbase_hwcnt_gpu_narrow.o \
    hwcnt/mali_kbase_hwcnt_types.o \
